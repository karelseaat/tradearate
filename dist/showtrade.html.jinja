<!DOCTYPE html>

{% extends "base.html" %}

{% block content %}
<section class="padtop" id="additional">
  <div class="content">
    <div class="r">
      <h6 class="font-alt">Menu Lists</h6>
      <div class="row">

        <div class="frame col-10 framepadding">
          <div class="frame__header">
            <div class="tile level">
              <div class="tile__container">
                <p class="tile__title m-0">Trade Status</p>
              </div>
            </div>
          </div>
          <div class="frame__body">
            <ul class="menu">
              <li class="menu-item"> <p>Day since item start: </p> <p>{{ data.message.age() }}</p> </li>
              <li class="menu-item"> <p>Days since trade acception: </p>{{ data.message.accept_age() }} </li>
              <li class="menu-item"> <p>Status: </p><p>{{ data.message.status() }} </p> </li>
              <li class="menu-item"> <p>days left until reviews should be done: </p><p>{{ data.message.trade_days_left() }} </p> </li>
            </ul>
          </div>
        </div>

        <div class="frame col-10 framepadding">
          <div class="frame__header">
            <a href="./usertrades?userid={{ data.message.initiator.id }}">
            <div class="tile level">
              <div class="tile__icon">
                <figure class="avatar"><img src="{{ data.message.initiator.picture }}"></figure>
              </div>
              <div class="tile__container">
                <p class="tile__title m-0">{{ data.message.initiator.fullname }}</p>
              </div>
            </div>
            </a>
          </div>
          <div class="frame__body">
            <ul class="menu">
              <li class="divider"></li>
              <li class="menu-item"><p>App:</p><a href="{{ data.message.initiatorapp.get_url() }}">{{ data.message.initiatorapp.name }}</a><img width="64" src="{{ data.message.initiatorapp.imageurl }}"></li>
              <li class="menu-item">
                <p>Lang:</p><p>{{ data.message.initiatorlang }}</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="frame col-10 framepadding">
          <div class="frame__header">
            {% if data.message.joiner %}
            <a href="./usertrades?userid={{ data.message.joiner.id }}">
            <div class="tile level">
              <div class="tile__icon">
                <figure class="avatar"><img src="{{ data.message.joiner.picture }}"></figure>
              </div>
              <div class="tile__container">
                <p class="tile__title m-0">{{ data.message.joiner.fullname }}</p>
              </div>
            </div>
            </a>
            {% endif %}
          </div>
          <div class="frame__body">
            {% if data.message.joinerapp %}
            <ul class="menu">
              <li class="divider"></li>
              <li class="menu-item"><p>App:</p><a href="{{ data.message.joinerapp.get_url() }}">{{ data.message.joinerapp.name }}</a><img width="64" src="{{ data.message.joinerapp.imageurl }}"></li>
              <li class="menu-item">
                <p>Lang:</p><p>{{ data.message.joinerlang }}</p>
              </li>
            </ul>
            {% endif %}
          </div>
        </div>

      </div>
    </div>
    {% if data.canjoin %} <button class="btn-primary btn-small" onclick="window.location.href='/join?tradeid={{ data.message.id }}';">Join</button> {% endif%}
    {% if data.canaccept %}<button class="btn-primary btn-small" onclick="window.location.href='/accept?tradeid={{ data.message.id }}';">Accept</button> {% endif%}
    {% if data.canreject %}<button class="btn-primary btn-small" onclick="window.location.href='/reject?tradeid={{ data.message.id }}';"} >Reject</button> {% endif%}
    {% if data.candelete %}<button class="btn-primary btn-small" onclick="window.location.href='/delete?tradeid={{ data.message.id }}';">Delete</button> {% endif%}
    {% if data.canleave %}<button class="btn-primary btn-small" onclick="window.location.href='/leave?tradeid={{ data.message.id }}';">Leave</button> {% endif%}
    <div class="space"></div>
  </div>
  </div>
</section>

{% endblock %}
