<!DOCTYPE html>

{% extends "base.html" %}

{% block content %}

<section class="section is-main-section">
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      <div class="card tile is-child">
        <header class="card-header">
          <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-account default"></i></span>
            Trade Status
          </p>
        </header>
        <div class="card-content">
          <div class="is-user-avatar image has-max-width is-aligned-center">
            <img src="" alt="">
          </div>
          <hr>
          <div class="field">
            <label class="label">Day since start</label>
            <div class="control is-clearfix">
              <input type="text" readonly value="{{ data.message.age() }}" class="input is-static">
            </div>
          </div>
          <hr>
          <div class="field">
            <label class="label">Days since acceptation</label>
            <div class="control is-clearfix">
              <input type="text" readonly value="{{ data.message.accept_age() }}" class="input is-static">
            </div>
          </div>
          <div class="field">
            <label class="label">Status</label>
            <div class="control is-clearfix">
              <input type="text" readonly value="{{ data.message.status() }}" class="input is-static">
            </div>
          </div>
          <div class="field">
            <label class="label">Days left until reviews should be done</label>
            <div class="control is-clearfix">
              <input type="text" readonly value="{{ data.message.trade_days_left() }}" class="input is-static">
            </div>
            <label class="label">Initiator</label>
            <div class="control is-clearfix">
              <div class="is-user-avatar image has-max-width is-aligned-center">
                <img src="{{ data.message.initiator.picture }}" alt="{{ data.message.initiator.fullname }}">
              </div>
              <input type="text" readonly value="{{ data.message.initiator.fullname }}" class="input is-static">
            </div>
            <label class="label">Initiaor App</label>
            <div class="control is-clearfix">
              <div class="is-user-avatar image has-max-width is-aligned-center">
                <img src="{{ data.message.initiatorapp.imageurl }}" alt="{{ data.message.initiatorapp.name }}">
              </div>
              <input type="text" readonly value="{{ data.message.initiatorapp.name }}" class="input is-static">
            </div>
            <label class="label">Joiner</label>
            <div class="control is-clearfix">
              <div class="is-user-avatar image has-max-width is-aligned-center">
                <img src="{{ data.message.joiner.picture }}" alt="{{ data.message.joiner.fullname }}">
              </div>
              <input type="text" readonly value="{{ data.message.joiner.fullname }}" class="input is-static">
            </div>
            <label class="label">Joiner App</label>
            <div class="control is-clearfix">
              <div class="is-user-avatar image has-max-width is-aligned-center">
                <img src="{{ data.message.joinerapp.imageurl }}" alt="{{ data.message.joinerapp.name }}">
              </div>
              <input type="text" readonly value="{{ data.message.joinerapp.name }}" class="input is-static">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section is-main-section">
  <div class="tile is-ancestor">
    <div class="tile is-parent">
      <div class="card tile is-child">

        {% if data.candelete %}
        <button class="button is-medium is-danger" type="button" onclick="window.location.href='/delete?tradeid={{ data.message.id }}'">
          <span>Delete</span>
          <span class="icon"><i class="mdi mdi-delete-forever"></i></span>
        </button>
        {% endif %}

        {% if data.canjoin %}
        <button class="button is-medium is-primary" type="button" onclick="window.location.href='/join?tradeid={{ data.message.id }}'">
          <span>Join</span>
          <span class="icon"><i class="mdi mdi-location-enter"></i></span>
        </button>
        {% endif%}

        {% if data.canleave %}
        <button class="button is-medium is-primary" type="button" onclick="window.location.href='/leave?tradeid={{ data.message.id }}'">
          <span>Leave</span>
          <span class="icon"><i class="mdi mdi-location-exit"></i></span>
        </button>
        {% endif%}

        {% if data.canaccept %}
        <button class="button is-medium is-primary" type="button" onclick="window.location.href='/accept?tradeid={{ data.message.id }}'">
          <span>Accept</span>
          <span class="icon"><i class="mdi mdi-checkbox-marked-circle-outline"></i></span>
        </button>
        {% endif%}

        {% if data.canreject %}
        <button class="button is-medium is-primary" type="button" onclick="window.location.href='/reject?tradeid={{ data.message.id }}'">
          <span>Reject</span>
          <span class="icon"><i class="mdi mdi-checkbox-blank-circle-outline"></i></span>
        </button>
        {% endif%}
      </div>
    </div>
  </div>
</section>

{% endblock %}
