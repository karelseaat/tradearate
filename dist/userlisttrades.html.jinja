<!DOCTYPE html>

{% extends "base.html.jinja" %}

{% block content %}

<div class="hero fullscreen">
  <div class="hero-body u-center">
    <div class="w-90" style="position: relative">
      <div class="row">

        <div class="frame fullwidth">
          <div class="frame__body">
            <div class="tile level">
              <div class="tile__icon">
                <figure class="avatar"><img src="{{ data['message'].picture }}"></figure>
              </div>
              <div class="tile__container">
                <p class="tile__title m-0">{{ data['message'].fullname }}</p>
              </div>
            </div>
          </div>
          <div class="frame__body">

            <ul class="menu">
              <li class="divider"></li>
              <li class="menu-item"><p>Nr of started trades: {{ data['message'].initiatortrades|length }}</p></li>
              <li class="menu-item"><p>Nr of joined trades: {{ data['message'].joinertrades|length }}</p></li>
              <li class="menu-item">
                <p>Lang:</p><p>{{ data['message'].locale }}</p>
              </li>
            </ul>

          </div>
        </div>

      </div>

      <div class="row">

        <div class="frame__header">
          <div class="tile level">
            <div class="tile__container">
              <p class="tile__title m-0">Initiated trades</p>
            </div>
          </div>
        </div>


        <table class="table striped beest">

          <thead class="lolzor">
            <tr>
              <th><abbr title="Title2">Start app</abbr></th>
              <th><abbr title="Title3">Start User</abbr></th>
              <th><abbr title="Title4">Age</abbr></th>
              <th><abbr title="Title5">Status</abbr></th>
              <th><abbr title="Title5">Open</abbr></th>
            </tr>
          </thead>

          <tbody>
            {% for my_item in data['message'].initiatortrades %}
            <tr>
              <td>{{my_item.initiatorapp.name}}</td>
              <td>{{my_item.initiator.fullname}}</td>
              <td>{{my_item.age()}} days</td>
              <td>{{my_item.status()}}</td>

              <td><button class="btn-primary btn-small" onclick="window.location.href='/show?tradeid={{ my_item.id }}';">Open</button></td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
        <div class="row">
          <div class="frame__header">
            <div class="tile level">
              <div class="tile__container">
                <p class="tile__title m-0">Joined trades</p>
              </div>
            </div>
          </div>
        <table class="table striped beest">

          <thead class="lolzor">
            <tr>
              <th><abbr title="Title2">Start app</abbr></th>
              <th><abbr title="Title3">Start User</abbr></th>
              <th><abbr title="Title4">Age</abbr></th>
              <th><abbr title="Title5">Status</abbr></th>
              <th><abbr title="Title5">Open</abbr></th>
            </tr>
          </thead>

          <tbody>
            {% for my_item in data['message'].joinertrades %}
            <tr>
              <td>{{my_item.initiatorapp.name}}</td>
              <td>{{my_item.initiator.fullname}}</td>
              <td>{{my_item.age()}} days</td>
              <td>{{my_item.status()}}</td>

              <td><button class="btn-primary btn-small" onclick="window.location.href='/show?tradeid={{ my_item.id }}';">Open</button></td>
            </tr>
            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="https://use.fontawesome.com/a696b91557.js"></script>

{% endblock %}
